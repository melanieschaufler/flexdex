
<h1> MY BOOKINGS </h1>
<div class="cards-workspaces">
    <% @my_bookings.each do |booking| %>
        <div class="card" id="my-bookings-card">
          <%= image_tag 'workspace-01.png', class: "card-image"%>
          <div class="card-content">
            <h2><%= Workspace.find(booking.workspace_id).name %></h2>
            <p>Address </br><strong><%= Workspace.find(booking.workspace_id).address %></strong></p>
            <p>Description </br><strong><%= Workspace.find(booking.workspace_id).description %></strong></p>
            <p id="price-wrapper"><span id="price"><%= Workspace.find(booking.workspace_id).price %>â‚¬</span> / Day</p>
            <p><span id="request-email"><%= booking.date %></span></p>
            <% if booking.status === "accepted" %>
                  <span class="request-status" id="accepted">Accepted</span>
              <% elsif booking.status === "rejected" %>
                  <span class="request-status" id="rejected">Rejected</span>
              <% else  %>
                  <span class="request-status" id="pending">Pending</span>
            <% end %>
            <%= link_to 'Delete', booking ,method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-warning", id: "delete-btn"%>
          </div>
        </div>
    <% end %>
</div>

  <br>
  <div id = "link-top">
    <%= link_to "Find other workspaces", workspaces_path, class: "button-primary"%>
  </div>

